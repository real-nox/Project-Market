<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cité De Soin Et Beauté - Nos Produits</title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="shortcut icon" href="/img/icon.jpg" type="image/x-icon">
</head>

<body>
    <div id="loader">
        <div id="spinner"></div>
    </div>

    <div id="everything">
        <%- include("includes/topbar") %>

            <main>
                <div class="centerpart">
                    <div class="boxc">
                        <div class="box">
                            <h2>Ajout Des Produits</h2>
                            <div class="formp">
                                <form action="" method="post" enctype="multipart/form-data">
                                    <div class="grid">
                                        <div class="itempr">
                                            <div class="itempr1">
                                                <label>Libellé Produit</label>
                                                <input type="text" name="libellep" id="libellep"
                                                    placeholder="Entrer le libellé du produit">
                                            </div>
                                            <div class="itempr2">
                                                <label>Prix Produit</label>
                                                <input type="number" name="prixp" id="prixp"
                                                    placeholder="Entrer le prix du produit" min="0" max="100000">
                                            </div>
                                        </div>
                                        <div class="itempr">
                                            <label>Description Produit</label>
                                            <textarea placeholder="Entrer la description du produit" name="descp"
                                                id="descp"></textarea>
                                        </div>
                                        <div class="itempr">
                                            <label>Stock Produit</label>
                                            <input type="number" name="stockp" id="stockp"
                                                placeholder="Entrer la quantité du produit" min="0" max="100000">
                                        </div>
                                        <div class="itempr">
                                            <input type="file" name="img_p" id="imgp" />
                                            <label id="imgs" for="imgp">Image Produit</label>
                                        </div>
                                    </div>
                                    <div class="btnitempr">
                                        <button id="btncool" type="submit">Ajouter</button>
                                        <div id="responsecard" class="responsecard">
                                            <h4>Produit a été ajouter!</h4>
                                            <p>Le produit est maintement ajouté, Bravo!</p>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

            <%- include("includes/footer") %>
    </div>

    <script>
        window.addEventListener("load", () => {
            document.getElementById("loader").classList.add("hide");
            document.getElementById("everything").classList.add("show");

            document.getElementById("imgp").addEventListener("change", (e) => {
                let fileName = e.target.files[0].name

                document.getElementById("imgs").innerHTML = fileName
            })

            const btn = document.getElementById("btncool")

            btn.addEventListener("click", () => {
                document.getElementById("responsecard").classList.add("open")

                setTimeout(() => {
                    document.getElementById("responsecard").classList.remove("open")
                }, 5000);
            })
        });
    </script>
</body>

</html>